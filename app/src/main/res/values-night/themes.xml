<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coffee8" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:itemBackground">@color/dark_theme_bg</item>
        <item name="android:textColor">@color/night_title</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/dark_theme_bg</item>
        <item name="android:textColor">@color/night_title</item>
    </style>

    <style name="radio" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonTint">#8dcbff</item>
        <item name="android:textColor">@color/night_title</item>
        <item name="android:backgroundTint">@color/night_title</item>
    </style>

    <style name="keyController" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/lighter_dark_theme_bg    </item>
    </style>

    <style name="keyControllerBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/dark_theme_bg</item>
        <item name="titleTextColor">@color/night_title</item>
        <item name="android:textColorSecondary">@color/night_title</item>
    </style>

    <style name="keyControllerComponent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/night_title</item>
    </style>

</resources>